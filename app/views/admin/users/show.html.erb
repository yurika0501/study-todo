          <td>
            <%= image_tag @user.get_profile_image(100, 100) %>
          </td>
        </tr>
        <tr>
      	  <th>プロフィール</th>
      	  <td><%= @user.introduction %></td>
        </tr>
        <tr>
          <th style="width: 20%">メールアドレス</th>
          <td><%= @user.email %></td>
        </tr>
            <tbody>
              <tr>
                <th>投稿タイトル</th><th style="width: 20%">投稿リスト</th>
              </tr>
              <% @posts.each do |post| %>
              <tr>
                <td><%= post.title %></td>
                
                <td style="width: 20%"><%= post.list1 %></td>
                <td style="width: 20%"><%= post.list2 %></td>
                <td style="width: 20%"><%= post.list3 %></td>
                <td style="width: 20%"><%= post.list4 %></td>
                <td style="width: 20%"><%= post.list5 %></td>
                <td style="width: 20%"><%= post.list6 %></td>
                <td style="width: 20%"><%= post.list7 %></td>
                <td style="width: 20%"><%= post.list8 %></td>
                <td style="width: 20%"><%= post.list9 %></td>
                <td style="width: 20%"><%= post.list10 %></td>
