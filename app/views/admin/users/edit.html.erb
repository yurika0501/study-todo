<div class='container mt-5'>
  <div class='row'>
    <h3 class="page-name">
      <strong>
        <%= @user.name %>
        さんの会員情報編集
      </strong>
    </h3>
  </div></br>
  
  <%= form_with model: [:admin, @user] do |f| %>
  <div class="row">
    <div class="col">
      
      <div class="row">
        <div class="col-3">
          <p>会員ID</p>
        </div>
        <div class="col-9">
          <%= @user.id %>
        </div>
      </div>

      <div class="row">
        <div class="col-3">
          <p>名前</p>
        </div>
        <div class="col-9">
          <%= f.text_field :name %>
        </div>
      </div>
      
      <div class="row">
        <div class="col-3">
          <p>プロフィール</p>
        </div>
        <div class="col-9">
          <%= f.text_field :introduction %>
        </div>
      </div>
      
      <div class="row">
        <div class="col-3">
          <p>メールアドレス</p>
        </div>
        <div class="col-9">
          <%= f.text_field :email %>
        </div>
      </div>
      
      <div class="row">
        <div class="col-3">
          <p>会員ステータス</p>
        </div>
        <div class="col-9">
          <%= f.radio_button(:is_deleted, false) %><%= f.label :is_deleted_in_use, '有効' %>&nbsp;
          <%= f.radio_button(:is_deleted, true) %><%= f.label :is_deleted_withdrawal, '退会' %>
        </div>
      </div>

    </div>
  </div>
  
  <div class="container text-center mt-4">
      <div class="col-xs-offset-1">
        <%= f.submit "変更を保存する" ,class: 'btn btn-outline-success' %>
      </div>
  </div>
  <% end %>
  
</div>