<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-12 col-md-8 col-lg-6 px-0">
      <div class="card">
        <div class="card-header">
          <h2 class="text-center">プロフィール編集</h2>
        </div>
        <div class="card-body">
          <%= form_with model: @user, local: true, html: {class: "form-horizontal"}, multipart: true do |f| %>
            <div class="form-group row">
              <%= f.label :名前, class: "col-md-4 col-form-label text-md-left" %>
              <div class="col-md-6">
                <%= f.text_field :name, class: "form-control" %>
              </div>
            </div>
            <div class="form-group row">
              <%= f.label :プロフィール, class: "col-md-4 col-form-label text-md-left" %>
              <div class="col-md-6">
                <%= f.text_area :introduction, class: "form-control" %>
              </div>
            </div>
            <div class="form-group row">
              <%= f.label :プロフィール画像, class: "col-md-4 col-form-label text-md-left" %>
              <div class="col-md-6">
                <%= f.file_field :profile_image, class: "form-control-file" %>
              </div>
            </div>
            <div class="form-group row mb-0">
              <div class="col-md-6 offset-md-4">
                <%= f.submit '更新', class: "btn btn-primary" %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
