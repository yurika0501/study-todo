<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <h2>プロフィール編集</h2>
        <%= form_with model: @user, local:true do |f| %>
          <div class="form-group">
            <%= f.label :名前 %>
            <%= f.text_field :name, class: "form-control name" %>
          </div>
          <div class="form-group">
            <%= f.label :プロフィール %>
            <%= f.text_area :introduction, class: "form-control name" %>
          </div>
          <div class="form-group">
            <%= f.label :プロフィール画像 %><br>
            <%= f.file_field :profile_image %>
          </div>

            <%= f.submit '更新', class: "btn btn-outline-secondary" %>

        <% end %>
     </div>
  </div>
</div>